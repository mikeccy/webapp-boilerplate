<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    {{! less css always minified }}
    <link rel='stylesheet' href='/css/less/index.css' />
    <link rel='stylesheet' href='/css/less/apps/chatroom.css' />
    {{#if dev}}
    {{! if development use unminified }}
    <link rel='stylesheet' href='/css/bootstrap.css' />
    <script src="/js/jquery-1.9.1.js"></script>
    <script src="/js/underscore.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/backbone.js"></script>
    <script src="/js/jstorage.js"></script>

    <script src='/socket.io/socket.io.js' type='text/javascript'></script>
    <script src='/js/apps/chatroom-client.js' type='text/javascript'></script>
    
    <script src="/js/handlebars-1.0.rc.1.min.js"></script>
    <script type="text/javascript" src="/js/apps/chatroom-tpl.js"></script>
    <script src='/js/apps/chatroom-ui.js' type='text/javascript'></script>

    <!--<script type="text/javascript" src="/js/hbs-templates.js"></script>-->
    {{else}}
    {{! if production use minified }}
    <link rel='stylesheet' href='/css/bootstrap.min.css' />
    <script src="/js/jquery-1.9.1.min.js"></script>
    <script src="/js/underscore-min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/backbone-min.js"></script>
    <script src="/js/jstorage.min.js"></script>
    <!--<script type="text/javascript" src="/js/hbs-templates.min.js"></script>-->
    {{/if}}
  </head>
  <body>

    <div class="text-right">
      <h1>{{ title }}</h1>
      <p class="lead">Welcome to {{ title }}</p>
    </div>

    <div class="navbar">
      <div class="navbar-inner">
        <ul class="nav">
          {{#each nav}}
            <li><a href="{{href}}">{{name}}</a></li>
          {{/each}}
        </ul>
        <form class="navbar-search pull-right">
          <input type="text" class="search-query" placeholder="Search" />
          <i class="icon-search"></i>
        </form>
      </div>
    </div>
    
    <div id="container">
      <div id="sidebar-left">
        <ul class="nav nav-pills nav-stacked">
          {{#each apps}}
            <li><a href="{{href}}">{{name}}</a></li>
          {{/each}}
        </ul>
      </div>
      
      <div id="mid-right">
        <div id="main">
        
          <ul class="nav nav-pills">
            {{#each apps}}
              <li><a href="{{href}}">{{name}}</a></li>
            {{/each}}
          </ul>
          
          <div id='app-content'>
          </div>

        </div>

        <div id="sidebar-right">
        </div>
      
      </div>

      <div id="footer"></div>
    </div>

  </body>
</html>